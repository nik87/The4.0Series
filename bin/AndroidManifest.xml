<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theworks"
    android:versionCode="1"
    android:versionName="1.0" >
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.theworks.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theworks.Settings"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.theworks.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theworks.InternalStore"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.theworks.INTERNALSTORE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theworks.Reading"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.theworks.READING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theworks.The40SeriesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.theworks.ST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theworks.Numbers"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.theworks.NUMBERS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theworks.SaveToSD"
            android:label="@string/app_name" >
            <action android:name="com.example.theworks.SAVETOSD"/>
            <category android:name="android.intent.category.DEFAULT"/>
        </activity>
    </application>

</manifest>